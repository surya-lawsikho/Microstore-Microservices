{
  "name": "microstore-aws-api-gateway",
  "version": "1.0.0",
  "description": "AWS API Gateway implementation for MicroStore microservices",
  "main": "src/handler.js",
  "scripts": {
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "deploy:vpc": "aws cloudformation deploy --template-file vpc-link-cloudformation.yml --stack-name microstore-vpc-link --parameter-overrides EnvironmentName=dev --capabilities CAPABILITY_IAM",
    "remove": "serverless remove",
    "offline": "serverless offline",
    "logs": "serverless logs -f gateway",
    "logs:integrations": "serverless logs -f nonProxyGetProduct",
    "test": "node test-api.js",
    "test:integrations": "node test-integrations.js",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "@aws-sdk/client-s3": "^3.632.0",
    "@aws-sdk/client-sqs": "^3.632.0",
    "@aws-sdk/client-sns": "^3.632.0",
    "@aws-sdk/client-dynamodb": "^3.632.0",
    "@aws-sdk/util-dynamodb": "^3.632.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "serverless": "^3.38.0",
    "serverless-offline": "^13.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "aws",
    "api-gateway",
    "microservices",
    "serverless",
    "lambda"
  ],
  "author": "MicroStore Team",
  "license": "MIT"
}
